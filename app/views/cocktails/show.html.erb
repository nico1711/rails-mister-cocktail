<div class="container mt-3" id="cocktail-list">

  <h3 class="mb-3"><%= @cocktail.name %></h3>
  <div class="row">



    <div class="col">
      <div class="card mb-3">
        <%= cl_image_tag @cocktail.photo, class: "card-img-top img-show" %>
      </div>
    </div>
    <div class="col">
      <div class="container">
        <h5 class="card-title">Ingredients</h5>
        <% @doses.each do |d| %>
          <div class="card mb-3">
            <div class="card-body">
              <%= d.description %> of <%= d.ingredient.name %>
              <%= link_to "", dose_path(d) , class: "far fa-trash-alt", method: :delete, data: {confirm: 'are you sure?'} %>
            </div>
          </div>
        <% end %>
        <!-- ADD NEW DOSE FORM -->
        <div class="card-body p-0">
            <h5 class="card-title">Add new dose</h5>
            <%= simple_form_for [@cocktail, @dose] do |d| %>
              <%= d.input :description %>
              <%= d.input :ingredient, collection: @ingredients %>
              <%= d.submit class: "btn btn-primary" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
