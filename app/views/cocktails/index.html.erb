<div class="page-banner">
  <div class="container ">
    <div class="row">
      <h1 class="text-white shadow-text">You look like I could use a drink...</h1>
    </div>

  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
      <div class="col d-flex align-items-stretch">
        <div class="card mt-3 align-items-center" style="width: 15rem">
          <%= cl_image_tag c.photo, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to c.name, cocktail_path(c)  %>
              </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



